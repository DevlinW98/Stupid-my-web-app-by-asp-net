@model WebApplication1.Models.User
@{
    ViewData["Title"] = "EditProfile";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" />
}
<div class="profile-container">
    <h1>Edit Profile</h1>
    <div class="profile-edit">
        <img src="~/img/avartar1.png" alt="Profile Avatar">
        <form asp-action="EditProfile" asp-controller="Profile" method="post">
            <div class="field">
                <label>Name:</label>
                <input type="text" asp-for="UserName" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="field">
                <label>Age:</label>
                <input type="number" asp-for="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="field">
                <label>Email:</label>
                <input type="email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="field">
                <label>Description:</label>
                <input type="text" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="buttonzone">
                <button type="submit">Save</button>
                <a asp-controller="Profile" asp-action="Index" class="button cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
